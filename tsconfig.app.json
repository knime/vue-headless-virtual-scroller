{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["vite-env.d.ts", "src/**/*", "lib/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "noEmit": true,
    "verbatimModuleSyntax": false
  }
}
